<resources>
    <!-- Base application theme. -->
    <style name="Theme.SSUtudy" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Status bar text color. -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="dropDownListViewStyle">@style/SpinnerTheme</item>
    </style>

    <style name="SpinnerDivideStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/gray_d5d5d5</item> <!-- divider 색 -->
        <item name="android:dividerHeight">1dp</item> <!-- divider 높이 -->
    </style>

    <style name="SpinnerTheme" parent="@android:style/Widget.Material.ListView.DropDown">
        <item name="android:dropDownListViewStyle">@style/SpinnerDivideStyle</item>
        <item name="android:listSelector">@drawable/bg_spinner_ripple</item>
    </style>
</resources>