<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_stroke_gray_d5d5d5_1_radius_10">

    <TextView
        android:id="@+id/tv_item_recommendation_major"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/bg_solid_green_cbef9d_radius_8"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:textAppearance="@style/R14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="소프트웨어학부" />

    <TextView
        android:id="@+id/tv_item_recommendation_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:textAppearance="@style/R14"
        android:textColor="@color/gray_464646"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_recommendation_major"
        app:layout_constraintStart_toEndOf="@id/tv_item_recommendation_major"
        app:layout_constraintTop_toTopOf="@id/tv_item_recommendation_major"
        tools:text="운영체제(가)" />

    <TextView
        android:id="@+id/tv_item_recommendation_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/B16"
        android:textColor="@color/sky_5ec2c4"
        app:layout_constraintStart_toStartOf="@id/tv_item_recommendation_major"
        app:layout_constraintTop_toBottomOf="@id/tv_item_recommendation_major"
        tools:text="모집중" />

    <TextView
        android:id="@+id/tv_item_recommendation_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="@style/B16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_item_recommendation_state"
        app:layout_constraintTop_toTopOf="@id/tv_item_recommendation_state"
        tools:text="1일 1코테 문제풀기1일 1코테 문제풀기1일 1코테 문제풀기1일 1코테 문제풀기1일 1코테 문제풀기1일 1코테 문제풀기1일 1코테 문제풀기1일 1코테 문제풀기" />

    <TextView
        android:id="@+id/tv_item_recommendation_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="@style/R14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_recommendation_title"
        tools:text="스터디 목적이나 간단한 설명들이 나옴. 스터디 목적이나 간단한 설명들이 나옴. 스터디 목적이나 간단한 설명들이 나옴. 스터디 목적이나 간단한 설명들이 나옴. 스터디 목적이나 간단한 설명들이 나옴. " />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_item_recommendation_content"
        app:layout_constraintTop_toBottomOf="@id/tv_item_recommendation_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_participants" />

        <TextView
            android:id="@+id/tv_item_recommendation_participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textAppearance="@style/R14"
            tools:text="@string/current_max_participants" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>