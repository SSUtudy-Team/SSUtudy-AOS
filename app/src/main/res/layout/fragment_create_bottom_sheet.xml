<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="18dp">

    <TextView
        android:id="@+id/tv_create_bottom_sheet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="스터디 카테고리 설정"
        android:textAppearance="@style/B18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/layout_create_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:flexWrap="wrap"
        app:layout_constraintTop_toBottomOf="@id/tv_create_bottom_sheet_title" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_create_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_enable_selector_gray_sky_radius_10"
        android:enabled="false"
        android:paddingVertical="15dp"
        android:text="선택"
        android:textAppearance="@style/B18"
        app:layout_constraintTop_toBottomOf="@id/layout_create_bottom_sheet" />

</androidx.constraintlayout.widget.ConstraintLayout>
